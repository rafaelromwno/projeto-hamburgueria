@{
    ViewData["Title"] = "Contato";
}

<div class="container my-5">
    <!-- Imagem de introdução -->
    <div class="text-center mb-4">
        <img src="~/images/faleconosco1.jpg" alt="Fale conosco" class="img-fluid rounded shadow" />
    </div>

    <!-- Conteúdo principal -->
    <div class="jumbotron p-4 bg-light rounded shadow">
        <h3 class="text-center mb-3">Queremos ouvir o que você tem a dizer</h3>
        <p class="text-center">
            Se você tiver alguma dúvida ou sugestão, fale conosco!
        </p>

        <!-- Contatos organizados em linhas -->
        <div class="row text-center mt-4">
            <!-- Email -->
            <div class="col-md-4 mb-3">
                <img src="~/images/Envelope-icon24.png" alt="Email" class="mb-2" style="width: 40px; height: auto;" />
                <h5>
                    <a href="mailto:macoratti@yahoo.com" class="text-decoration-none text-dark">macoratti@yahoo.com</a>
                </h5>
            </div>

            <!-- Telefone -->
            <div class="col-md-4 mb-3">
                <img src="~/images/phone-app-icon.png" alt="Telefone" class="mb-2" style="width: 40px; height: auto;" />
                <h5>(11) 9874-5566</h5>
            </div>

            <!-- Endereço -->
            <div class="col-md-4 mb-3">
                <img src="~/images/Home-iconred.png" alt="Endereço" class="mb-2" style="width: 40px; height: auto;" />
                <h5>Av. Juscelino Kubitschek, 1000</h5>
                <p class="mb-0">03540-550 - São Paulo</p>
            </div>
        </div>
    </div>
</div>
